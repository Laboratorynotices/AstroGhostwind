---
import { IProduct } from "../types";

// Определяем тип данных, которые мы ожидаем
interface Props {
	product: IProduct;
}

// Получение данных
const {
	product,
} = Astro.props as Props;
---

<div class="w-full md:w-1/3 px-2 pb-12">
	<div
		class="h-full bg-white rounded overflow-hidden shadow-md hover:shadow-lg relative smooth"
	>
		<a href={"./post/"+product.id} class="no-underline hover:no-underline">
			<img
				src={product.image}
				class="h-48 w-full rounded-t shadow-lg"
			/>
			<div class="p-6 h-auto md:h-48">
				<p class="text-gray-600 text-xs md:text-sm uppercase">
					{product.category}
				</p>
				<div
					class="font-bold text-xl text-gray-900"
				>{product.title}</div>
				<p
					class="text-gray-800 font-serif text-base mb-5"
				>{product.description}</p>
			</div>
			<div
				class="flex items-center justify-between inset-x-0 bottom-0 p-6"
			>
				<img
					class="w-8 h-8 rounded-full mr-4"
					src={product.image}
					alt={product.title}
				/>
				<p class="text-gray-600 text-xs md:text-sm">
					Price: {product.price}ŧ
				</p>
			</div>
		</a>
	</div>
</div>